NODE_ENV=test

# ================================
# Alert模块配置（测试环境精简）
# ================================

# Alert缓存TTL配置（测试环境缩短）
CACHE_ALERT_ACTIVE_TTL=60            # 测试环境1分钟过期
CACHE_ALERT_HISTORICAL_TTL=300       # 测试环境5分钟过期
CACHE_ALERT_COOLDOWN_TTL=60          # 测试环境缩短冷却期
CACHE_ALERT_CONFIG_TTL=300           # 测试环境缩短配置缓存TTL
CACHE_ALERT_STATS_TTL=60             # 测试环境缩短统计缓存TTL

# Alert性能配置（测试环境最小化）
ALERT_MAX_CONCURRENCY=2              # 测试环境最小并发
ALERT_QUEUE_SIZE_LIMIT=10            # 测试环境小队列
ALERT_RATE_LIMIT_PER_MINUTE=50       # 测试环境降低限制
ALERT_BATCH_SIZE=5                   # 测试环境小批处理
ALERT_CONNECTION_POOL_SIZE=2         # 测试环境最小连接池

# Alert业务配置（测试环境快速）
ALERT_EVALUATION_INTERVAL=30         # 测试环境快速评估
ALERT_DEFAULT_COOLDOWN=60            # 测试环境短冷却期
ALERT_EVALUATION_TIMEOUT=3000        # 测试环境短超时
ALERT_MAX_RETRIES=2                  # 测试环境减少重试

# ================================
# 系统安全配置（测试环境宽松）
# ================================
SESSION_LIFETIME=3600                # 测试环境1小时
IDLE_SESSION_TIMEOUT=600             # 测试环境10分钟
ACCOUNT_LOCKOUT_DURATION=300         # 测试环境5分钟
RATE_LIMIT_WINDOW=60                 # 速率限制窗口（60秒）

# ================================
# 测试环境特定配置
# ================================
PERFORMANCE_TEST_MODE=true
RATE_LIMIT_MULTIPLIER=100

# 数据库配置（测试环境）
MONGODB_URI=mongodb://localhost:27017/smart-stock-data-test
REDIS_URL=redis://localhost:6379

# JWT配置
JWT_SECRET=your_super_secret_and_long_string_here

# 禁用某些功能以加快测试
CACHE_COMPRESSION_ENABLED=false
AUTO_INIT_ENABLED=false
METRICS_ENABLED=false

# 测试环境速率限制（宽松）
IP_RATE_LIMIT_ENABLED=false
API_RATE_LIMIT_DEFAULT_REQUESTS=10000